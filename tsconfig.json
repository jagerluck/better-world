{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "strictNullChecks": false, // TODO: revisit. need to omit these checks in only some files not everywhere
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // "include": [
  //   "src/**/*.ts"
  // ],
  // "exclude": [
  //   "node_modules"
  // ],
}